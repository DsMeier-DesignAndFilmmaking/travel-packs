{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localcitytravelpacks.dev/schemas/city-travel-pack.schema.json",
  "title": "City Travel Pack",
  "type": "object",
  "required": ["packId", "city", "country", "sections"],
  "properties": {
    "packId": { "type": "string" },
    "city": { "type": "string" },
    "country": { "type": "string" },
    "sections": {
      "type": "object",
      "required": ["entry", "arrival", "money", "safety", "connectivity"],
      "additionalProperties": { "$ref": "#/$defs/versionedSection" }
    }
  },
  "$defs": {
    "versionedSection": {
      "type": "object",
      "required": ["payload"],
      "properties": {
        "sourceIds": { "type": "array", "items": { "type": "string" } },
        "payload": {
          "type": "object",
          "required": ["title", "description"],
          "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" },
            "criticalAlert": { "type": "string", "description": "High-priority warning" },
            "summaryStats": { 
              "type": "array", 
              "items": { 
                "type": "object", 
                "properties": { 
                  "label": { "type": "string" }, 
                  "value": { "type": "string" },
                  "icon": { "type": "string" } 
                } 
              } 
            },
            "tips": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    }
  }
}